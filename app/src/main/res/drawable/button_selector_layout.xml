<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="sweep"
                        android:endColor="#FFFFFF"

                        android:startColor="#00AEFF"
                        />
                    <corners android:radius="15dp" />
                </shape>
            </item>

            <item
                android:left="2dp"
                android:right="0dp"
                android:top="2dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:startColor="@color/eraser"
                        android:endColor="#FEFFE8"/>
                    <corners android:radius="15dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>